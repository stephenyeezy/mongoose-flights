<%- include('../partials/header') -%>

<form action="/flights" method="POST">
  <div class="form-group">
    <label for="airport"
      >From:
      <select class="form-control" name="airport">
          <option value="ATL">ATL</option>
          <option value="AUS">AUS</option>
          <option value="DEN">DEN</option>
          <option value="DFW">DFW</option>
          <option value="SAN">JFK</option>
          <option value="LAX">LAX</option>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label for="airline"
      >Airline
      <select class="form-control" name="airline">
        <option value="American">American Airlines</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>
    </label>
  </div>

  <div class="form-group">
    <label for="flightNo"
      >Flight No.
      <input class="form-control" type="text" name="flightNo" />
    </label>
  </div>
  <div class="form-group">
    <label for="departs"
      >Depart Date
      <input
        class="form-control"
        type="datetime-local"
        name="departs"
        value="<%= departureDate %>"
      />
    </label>
  </div>
  <button class="btn btn-success" type="submit">Add Flight</button>
  <a class="btn btn-primary" href="/flights">Return to Flights</a>
</form>

<%- include('../partials/footer') -%>
